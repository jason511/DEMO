@model IEnumerable<DemoWebApplication.Models.questions> 

@{
    ViewData["Title"] = "問題頁面";  //<!-- 頁面標題 -->
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create")" class="btn btn-primary mb-3">+</a>

<table class="table">
    <thead>
    <tr>
        <th>問題</th>
        <th>問題類別</th>
        <th>重要程度</th>
        <th>修改</th>
        <th>刪除</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var question in Model)  //<!-- 遍歷傳遞過來的問題資料 -->
    {
    <tr>
        <td>@question.question_text</td>
        <td>@question.category</td>
        <td>@question.difficulty_level</td>
        <td>
        <!-- 修改按鈕 -->
        <a href="@Url.Action("Edit", new { id = question.question_id })" class="btn btn-warning btn-sm">Edit</a>
        </td>
        <td>
            <!-- 刪除按鈕 -->
            <a href="@Url.Action("Delete", new { id = question.question_id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this question?')">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>